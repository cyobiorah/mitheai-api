# Server Configuration
PORT=3001
NODE_ENV=development

# JWT (if needed for additional auth)
JWT_SECRET=your-jwt-secret

# Brevo (Email Service) Configuration
BREVO_API_KEY=your-brevo-api-key
BREVO_INVITATION_TEMPLATE_ID=1  # Create a template in Brevo dashboard and put its ID here
BREVO_WELCOME_TEMPLATE_ID=2  # Create a welcome email template in Brevo dashboard
EMAIL_SENDER_ADDRESS=noreply@mitheai.com  # Sender email address for all emails
EMAIL_SENDER_NAME=MitheAI  # Sender name for all emails
WEBAPP_URL=http://localhost:5173  # Your frontend URL

# Social Media OAuth Configuration
TWITTER_CLIENT_ID=your-twitter-client-id
TWITTER_CLIENT_SECRET=your-twitter-client-secret
TWITTER_CALLBACK_URL=http://localhost:3001/api/social-accounts/twitter/callback

FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_CALLBACK_URL=http://localhost:3001/api/social-accounts/facebook/callback

LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_CALLBACK_URL=http://localhost:3001/api/social-accounts/linkedin/callback

# OpenAI Configuration
OPENAI_API_KEY=your_api_key
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.7
