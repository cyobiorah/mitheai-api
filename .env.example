# Firebase Admin SDK Configuration
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=your-service-account-email
FIREBASE_PRIVATE_KEY="your-private-key"

# Server Configuration
PORT=3001
NODE_ENV=development

# JWT (if needed for additional auth)
JWT_SECRET=your-jwt-secret

# Brevo (Email Service) Configuration
BREVO_API_KEY=your-brevo-api-key
BREVO_INVITATION_TEMPLATE_ID=1  # Create a template in Brevo dashboard and put its ID here
BREVO_WELCOME_TEMPLATE_ID=2  # Create a welcome email template in Brevo dashboard
EMAIL_SENDER_ADDRESS=noreply@mitheai.com  # Sender email address for all emails
EMAIL_SENDER_NAME=MitheAI  # Sender name for all emails
WEBAPP_URL=http://localhost:5173  # Your frontend URL

OPENAI_API_KEY=your_api_key
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.7
