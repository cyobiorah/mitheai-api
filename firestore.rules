rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function hasRole(role) {
      return isSignedIn() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }
    
    function isSuperAdmin() {
      return hasRole('super_admin');
    }
    
    function isOrgOwner() {
      return hasRole('org_owner');
    }
    
    function isInSameOrg(orgId) {
      return isSignedIn() && (
        (request.auth.token.organizationId == orgId) || // Check custom claims first
        (
          exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.organizationId == orgId
        )
      );
    }

    // Users collection
    match /users/{userId} {
      allow read: if isSignedIn() && (
        isOwner(userId) || 
        isSuperAdmin() || 
        request.auth.token.userId == userId ||
        isInSameOrg(resource.data.organizationId)
      );
      allow create: if true; // Allow creation during registration
      allow update: if isSignedIn() && (
        isOwner(userId) || 
        isSuperAdmin() || 
        request.auth.token.userId == userId
      );
      allow delete: if isSignedIn() && (isSuperAdmin() || isOwner(userId));
    }

    // Organizations collection
    match /organizations/{orgId} {
      allow read: if isSignedIn() && (
        isSuperAdmin() || 
        isInSameOrg(orgId) || 
        request.auth.token.organizationId == orgId
      );
      allow create: if true; // Allow creation during registration
      allow update: if isSignedIn() && (
        isSuperAdmin() || 
        (isOrgOwner() && isInSameOrg(orgId))
      );
      allow delete: if isSignedIn() && isSuperAdmin();
    }

    // Teams collection
    match /teams/{teamId} {
      allow read: if isSignedIn() && (
        isSuperAdmin() || 
        isInSameOrg(resource.data.organizationId)
      );
      allow create: if isSignedIn() || true; // Allow creation during registration
      allow update: if isSignedIn() && (
        isSuperAdmin() || 
        (isOrgOwner() && isInSameOrg(resource.data.organizationId))
      );
      allow delete: if isSignedIn() && (
        isSuperAdmin() || 
        (isOrgOwner() && isInSameOrg(resource.data.organizationId))
      );
    }

    // Social accounts collection
    match /social_accounts/{accountId} {
      allow create: if
        isSignedIn() &&
        !exists(
          db.collection("social_accounts")
          .where("platform", "==", request.resource.data.platform)
          .where("platformAccountId", "==", request.resource.data.platformAccountId)
          .limit(1)
        )
      allow read: if isSignedIn() && (
        // Individual user access
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.userType == 'individual' &&
         resource.data.userId == request.auth.uid) ||
        // Organization user access
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.userType == 'organization' &&
         (resource.data.userId == request.auth.uid ||
          (resource.data.teamId in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.teamIds) ||
          resource.data.organizationId == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.organizationId))
      );
    }
  }
}
